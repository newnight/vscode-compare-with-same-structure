{
  "name": "diffwith",
  "displayName": "Compare with same structure folder",
  "description": "Use bcompare or Kaleidoscope to compare with same structure folder ",
  "version": "1.0.6",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository":"https://github.com/newnight/vscode-compare-with-same-structure",
  "categories": [
    "Other"
  ],
  "preview": false,
  "keywords": [
    "Compare",
    "Kaleidoscope",
    "newnight"
  ],
  "publisher": "newnight",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "newnight.diffwith.compare",
        "title": "â‰  Compare With ..."
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "newnight.diffwith.compare",
          "when": "editorFocus",
          "group": "newnight@1"
        }
      ],
      "explorer/context": [
        {
          "command": "newnight.diffwith.compare",
          "group": "newnight@1"
        }
      ]
    },
    "configuration":[
      {
        "title": "newnight",
        "description":"Compare with same structure folder",
        "properties": {
          "newnight.diffToolPath": {
            "type": "string",
            "default": "/usr/local/bin/bcompare",
            "description": "Diff tool path. Bcompare or Kaleidoscope are supported"
          },
          "newnight.diffLists": {
            "type": "array",
            "default": [
              {
                "name":"dev",
                "path":"~/dev"
              },
              {
                "name":"rc",
                "path":"~/rc"
              }
            ],
            "description": "Diff list with same structure"
          }
        }
      }
    ]
  },
  "scripts": {
    "package": "vsce package --yarn --no-dependencies",
    "publish": "yarn run package && vsce publish",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
